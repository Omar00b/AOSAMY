<link rel="stylesheet" href="~/css/font-awesome.css">
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/mainsignin.css">
    <link rel="shortcut icon" href="~/img/icoooo.png" type="icon" /> 

@model UserInfo
<img class="img" src="img/backLogin.png" width="700px" >
    <form class="form" method="post"  enctype ="multipart/form-data">
        <p class="title">إنشاء متجرك الآن..</p>
        <p class="message">اكسب دخلا اضافيا من خلال بيع ملفاتك الرقمية<br>وجعلها متاحة لجميع العملاء الباحثين عن ملحقات </p>

        <div class="flex">
            <label asp-for="FirstName" >
                <input asp-for="FirstName" required="" placeholder="" type="text" class="input">
                <span>الاسم الأول</span>
            </label>
    

            <label asp-for="ScendName">
                <input asp-for="ScendName" required="" placeholder="" type="text" class="input">
                <span>العائلة</span>
            </label>
        </div>  
                

        <label asp-for="Email">
            <input asp-for="Email" required="" placeholder="" type="email" class="input">
            <span>الإيميل</span>
        </label> 
            

        <label asp-for="Password">
            <input asp-for="Password" required="" placeholder="" type="password" class="input">
            <span>كلمة المرور</span>
        </label>
        <label>
            <input required="" placeholder="" type="password" class="input">
            <span>تأكيد كلمة المرور</span>
        </label>
        <label asp-for="Specialty">
            <input asp-for="Specialty" required="" placeholder="" type="text" class="input">
            <span>التخصص</span>
        </label>

        <!-- اضافة صورة للحساب -->
         <label class="custum-file-upload" for="file" >
          
               <input type="file" asp-for="clientFile"  onchange="lodefile(event)" class="send" />
               <img id="myImge" height="200px"/></div>
           </div>
           
        </label>
        

       
        <button type="submit" class="submit">إنشاء</button>
        <p class="signin">بالفعل لديك متجر؟ <a asp-action="LogIn" asp-controller="User">سجل الدخول</a> </p>
        </form>
@section Scripts{
    <script>
        var lodefile = function (event){
            var reader = new FileReader();
            reader.onload = function(){
                var myImge = document.getElementById('myImge');
                myImge.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}